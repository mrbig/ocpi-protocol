{
    "title": "V2.2.1\\Common",
    "definitions": {
        "credentials": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 64
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "roles": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "common.schema.json#/definitions/credentials_role"
                    }
                }
            },
            "additionalProperties": false
        },
        "credentials_role": {
            "type": "object",
            "properties": {
                "role": {
                    "type": "string",
                    "enum": [
                        "CPO",
                        "EMSP",
                        "HUB",
                        "NAP",
                        "OTHER",
                        "SCSP"
                    ]
                },
                "business_details": {
                    "$ref": "common.schema.json#/definitions/business_details"
                },
                "party_id": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 3
                },
                "country_code": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 2
                }
            },
            "additionalProperties": false
        },
        "status_code": {
            "type": "integer"
        },
        "status_message": {
            "type": [
                "string",
                "null"
            ]
        },
        "timestamp": {
            "type": "string",
            "pattern": "^([0-9]{4})-(1[0-2]|0[0-9])-([0-2][0-9]|3[0-1])T([0-1][0-9]|2[0-4]):[0-5][0-9]:[0-5][0-9](\\.[\\d]{1,9})?(Z|[-+](0[0-9]|1[0-4]):[0-5][0-9])?$"
        },
        "allowed_type": {
            "type": "string",
            "enum": [
                "ALLOWED",
                "BLOCKED",
                "EXPIRED",
                "NO_CREDIT",
                "NOT_ALLOWED"
            ]
        },
        "authorization_info": {
            "type": "object",
            "properties": {
                "allowed": {
                    "$ref": "#/definitions/allowed_type"
                },
                "token": {
                    "$ref": "token.schema.json",
                    "required": [
                        "country_code",
                        "party_id",
                        "uid",
                        "type",
                        "contract_id",
                        "issuer",
                        "valid",
                        "whitelist",
                        "last_updated"
                    ]
                },
                "location": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref":"#/definitions/location_references"
                        }
                    ]
                },
                "authorization_reference": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "minLength": 1,
                    "maxLength": 36
                },
                "info": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref":"#/definitions/display_text"
                        }
                    ]
                }
            },
            "required": [
                "allowed",
                "token"
            ],
            "additionalProperties": false
        },
        "business_details": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                },
                "website": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri"
                },
                "logo": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref":"#/definitions/image"
                        }
                    ]
                }
            },
            "required": [
                "name"
            ],
            "additionalProperties": false
        },
        "evse_status": {
            "type": "string",
            "enum": [
                "AVAILABLE",
                "BLOCKED",
                "CHARGING",
                "INOPERATIVE",
                "OUTOFORDER",
                "PLANNED",
                "REMOVED",
                "RESERVED",
                "UNKNOWN"
            ]
        },
        "exceptional_period": {
            "type": "object",
            "properties": {
                "period_begin": {
                    "$ref": "#/definitions/timestamp"
                },
                "period_end": {
                    "$ref": "#/definitions/timestamp"
                }
            },
            "required": [
                "period_begin",
                "period_end"
            ],
            "additionalProperties": false
        },
        "hours": {
            "type": "object",
            "properties": {
                "regular_hours": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "$ref": "#/definitions/regular_hours"
                    }
                },
                "twentyfourseven": {
                    "type": "boolean"
                },
                "exceptional_openings": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "$ref": "#/definitions/exceptional_period"
                    }
                },
                "exceptional_closings": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "$ref": "#/definitions/exceptional_period"
                    }
                }
            },
            "additionalProperties": false
        },
        "image": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "thumbnail": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri"
                },
                "category": {
                    "type": "string",
                    "enum": [
                        "CHARGER",
                        "ENTRANCE",
                        "LOCATION",
                        "NETWORK",
                        "OPERATOR",
                        "OTHER",
                        "OWNER"
                    ]
                },
                "type": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 4
                },
                "width": {
                    "type": [
                        "integer",
                        "null"
                    ]
                },
                "height": {
                    "type": [
                        "integer",
                        "null"
                    ]
                }
            },
            "required": [
                "url",
                "category",
                "type"
            ],
            "additionalProperties": false
        },
        "latitude": {
            "type": "string",
            "minLength": 1,
            "maxLength": 10,
            "pattern": "^-?[0-9]{1,2}\\.[0-9]{5,7}$"
        },
        "longitude": {
            "type": "string",
            "minLength": 1,
            "maxLength": 11,
            "pattern": "^-?[0-9]{1,3}\\.[0-9]{5,7}$"
        },
        "geo_location": {
            "type": "object",
            "properties": {
                "latitude": {
                    "$ref": "#/definitions/latitude"
                },
                "longitude": {
                    "$ref": "#/definitions/longitude"
                }
            },
            "additionalProperties": false
        },
        "publish_token": {
            "type": "object",
            "properties": {
                "uid": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "minLength": 1,
                    "maxLength": 36
                },
                "type": {
                    "$ref": "token.schema.json#/properties/type"
                },
                "visual_number": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "minLength": 1,
                    "maxLength": 64
                },
                "issuer": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "minLength": 1,
                    "maxLength": 64
                },
                "group_id": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "minLength": 1,
                    "maxLength": 36
                }
            },
            "additionalProperties": false
        },
        "display_text": {
            "type": "object",
            "properties": {
                "language": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 2,
                    "pattern": "^[A-Za-z]{2}$"
                },
                "text": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 512
                }
            },
            "required": [
                "language",
                "text"
            ],
            "additionalProperties": false
        },
        "regular_hours": {
            "type": "object",
            "properties": {
                "weekday": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 7
                },
                "period_begin": {
                    "type": "string",
                    "pattern": "[0-2][0-9]:[0-5][0-9]"
                },
                "period_end": {
                    "type": "string",
                    "pattern": "[0-2][0-9]:[0-5][0-9]"
                }
            },
            "additionalProperties": false
        },
        "related_locations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "latitude": {
                        "$ref": "#/definitions/latitude"
                    },
                    "longitude": {
                        "$ref": "#/definitions/longitude"
                    },
                    "name": {
                        "$ref": "#/definitions/display_text"
                    }
                }
            }
        },
        "profile_type": {
            "type": "string",
            "enum": [
                "CHEAP",
                "FAST",
                "GREEN",
                "REGULAR"
            ]
        },
        "tariff_type": {
            "type": "string",
            "enum": [
                "AD_HOC_PAYMENT",
                "PROFILE_CHEAP",
                "PROFILE_FAST",
                "PROFILE_GREEN",
                "REGULAR"
            ]
        },
        "energy_mix": {
            "type": "object",
            "properties": {
                "is_green_energy": {
                    "type": "boolean"
                },
                "energy_sources": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "type": "object",
                        "properties": {
                            "source": {
                                "type": "string",
                                "enum": [
                                    "NUCLEAR",
                                    "GENERAL_FOSSIL",
                                    "COAL",
                                    "GAS",
                                    "GENERAL_GREEN",
                                    "SOLAR",
                                    "WIND",
                                    "WATER"
                                ]
                            },
                            "percentage": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 100
                            }
                        },
                        "required": [
                            "source",
                            "percentage"
                        ],
                        "additionalProperties": false
                    }
                },
                "environ_impact": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "type": "object",
                        "properties": {
                            "category": {
                                "type": "string",
                                "enum": [
                                    "NUCLEAR_WASTE",
                                    "CARBON_DIOXIDE"
                                ]
                            },
                            "amount": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "category",
                            "amount"
                        ],
                        "additionalProperties": false
                    }
                },
                "supplier_name": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "minLength": 1,
                    "maxLength": 64
                },
                "energy_product_name": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "minLength": 1,
                    "maxLength": 64
                }
            },
            "required": [
                "is_green_energy"
            ],
            "additionalProperties": false
        },
        "cdr_token": {
            "type": "object",
            "properties": {
                "country_code": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 2
                },
                "party_id": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 3
                },
                "uid": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 36
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "AD_HOC_USER",
                        "APP_USER",
                        "OTHER",
                        "RFID"
                    ]
                },
                "contract_id": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 36
                }
            },
            "required": [
                "country_code",
                "party_id",
                "uid",
                "type",
                "contract_id"
            ],
            "additionalProperties": false
        },
        "charging_period": {
            "type": "object",
            "properties": {
                "start_date_time": {
                    "type": "string"
                },
                "dimensions": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "CURRENT",
                                    "ENERGY",
                                    "ENERGY_EXPORT",
                                    "ENERGY_IMPORT",
                                    "MAX_CURRENT",
                                    "MIN_CURRENT",
                                    "MAX_POWER",
                                    "MIN_POWER",
                                    "PARKING_TIME",
                                    "POWER",
                                    "RESERVATION_TIME",
                                    "STATE_OF_CHARGE",
                                    "TIME"
                                ]
                            },
                            "volume": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "type",
                            "volume"
                        ],
                        "additionalProperties": false
                    }
                },
                "tariff_id": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "minLength": 1,
                    "maxLength": 36
                }
            },
            "required": [
                "start_date_time",
                "dimensions"
            ],
            "additionalProperties": false
        },
        "location_references": {
            "type": "object",
            "properties": {
                "location_id": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 39
                },
                "evse_uids": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 39
                    }
                }
            },
            "required": [
                "location_id"
            ]
        },
        "price": {
            "type": "object",
            "properties": {
                "excl_vat": {
                    "type": "number"
                },
                "incl_vat": {
                    "type": [
                        "number",
                        "null"
                    ]
                }
            },
            "required": [
                "excl_vat"
            ],
            "additionalProperties": false
        },
        "version": {
            "type": "string",
            "enum": [
                "2.0",
                "2.1",
                "2.1.1",
                "2.2",
                "2.2.1"
            ]
        }
    }
}
